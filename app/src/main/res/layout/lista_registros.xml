<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Operador:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nombreRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/correoRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cedula:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cedRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Celular:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/celRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lugar:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lugRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividad:"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ActRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:elevation="5dp"
                    app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_marginRight="50dp"
                                    android:layout_gravity="center"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/ic_actu"
                                    android:id="@+id/editicon"/>

                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="@mipmap/ic_borrar"
                                    android:id="@+id/deleteicon"/>

                        </LinearLayout>


                </androidx.cardview.widget.CardView>

        </LinearLayout>




    </androidx.cardview.widget.CardView>