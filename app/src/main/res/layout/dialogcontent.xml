<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ventana de Actualización"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Operador Nombre:"/>

        <EditText
            android:inputType="textPersonName"
            android:id="@+id/actname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo Operador"
            android:ems="10"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Correo:"/>

        <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/actemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electronico"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cedula:"/>
        <EditText
            android:id="@+id/actcc"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cedula Operador"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="celular"/>
        <EditText
            android:inputType="number"
            android:id="@+id/updateCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Celular Operador"
            />

        <EditText
            android:inputType="textAutoComplete"
            android:id="@+id/actDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción actividad realizada"
            />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actualizar"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>